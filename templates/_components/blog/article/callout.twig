{% set icon = '@svg/' ~ block.icon ~ '.svg' %}
{% set iconClass = 'h-7 w-7 text-' ~ block.color ~ '-500' %}
{# purgecss: text-yellow-500 text-red-500 text-blue-500 #}
<aside class="w-full p-4 my-4 bg-{{block.color}}-100 rounded-md callout shadow-lg">
{# purgecss: bg-yellow-100 bg-red-100 bg-blue-100 bg-yellow-200 bg-red-200 bg-blue-200 #}
  <span class="flex items-center justify-center mb-2 bg-{{block.color}}-200 rounded-full w-9 h-9">
    {{ svg(icon)|attr({ class: iconClass }) }}
  </span>
  <p class="my-0 text-base text-gray-600 vw-400">{{ block.text }}</p>
</aside>