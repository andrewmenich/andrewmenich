<article class="flex flex-wrap -mx-4 -my-8">
  <div class="px-4 py-8">
    <div class="flex items-start h-full">
      <div class="flex flex-col flex-shrink-0 w-12 leading-none text-center">
        <span class="pb-2 mb-2 text-gray-500 border-b-2 border-black border-opacity-20">
          {{ postDate|date('M') }}
        </span>
        <span class="text-lg font-medium leading-none text-gray-800 title-font">
          {{ postDate|date('d') }}
        </span>
      </div>
      <div class="flex-grow pl-6">
        {% if category %}
          <a href="{{ category.url }}" 
            class="inline-block px-2 py-1 mb-1 text-xs font-medium tracking-widest text-black uppercase bg-white rounded-full bg-opacity-40">
              {{ category.title }}
          </a>
        {% endif %}
        
        <h4 class="mb-3 text-xl font-medium text-gray-900 title-font">
          {{ title }}
        </h4>
        <p class="mb-5 leading-relaxed">
          {{ summary }}
        </p>
        <p>
          <a href="{{ url }}" class="inline-flex items-center hover:text-purple">
            Read More
            {{ svg('@svg/arrow.svg')|attr({ class: 'h-4 w-4 ml-2' }) }}
          </a>
        </p>
      </div>
    </div>
  </div>
</article>