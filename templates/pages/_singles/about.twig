{% extends "_layout" %}
{% block content %}

  
{% set category = category ?? null %}

  <section class="py-12 lg:pb-12 lg:pt-16 bg-night ">
    <div class="container-default">
      <div class="content-wrapper content-wrapper--center">
        <h1 class="mb-2 text-5xl lg:text-6xl text-froly ">
          About
        </h1>
      </div>
    </div>
  </section>

  {{ include('_atoms/wave', {
    color: 'night'
  }, with_context = false) }}

  <section class="text-gray-600 body-font">
  <div class="container flex flex-wrap px-5 py-24 mx-auto">
    <div class="w-full mb-10 overflow-hidden rounded-lg lg:w-1/2 lg:mb-0">
	    {% set image = entry.image.one() %}
	    {% set optimizedImage = image.optimizedImage %}
	    <img src="{{ optimizedImage.src() }}"
	         srcset="{{ optimizedImage.srcset() }}"
	         sizes="100vw"
	         alt="{{ image.alt }}"
	    />
    </div>
    <div class="flex flex-col flex-wrap -mb-10 lg:py-6 lg:w-1/2 lg:pl-12">
      <h2 class="mb-2 text-2xl font-medium text-night sm:text-3xl title-font">
        Get to Know Me
      </h2>
      <div class="w-20 h-1 bg-froly"></div>
  
      <article class="mt-6 prose lg:prose-lg">
        {{ entry.richText }}
      </article>
    </div>
  </div>
</section>
  

{% endblock %}
