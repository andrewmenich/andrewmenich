{% extends "_layout" %}
{% block content %}

{{ sprig.script }}
  
{% set category = category ?? null %}

  <section class="py-6 lg:pb-12 lg:pt-16 bg-night ">
    <div class="container-default">
      <div class="content-wrapper content-wrapper--center">
        <h1 class="mb-2 text-5xl lg:text-6xl text-froly ">
          Blog
        </h1>
      </div>
    </div>
  </section>

  {{ include('_atoms/wave', {
    color: 'night'
  }, with_context = false) }}
  
  <section class="py-8 lg:pt-4 lg:pb-20">

    <div class="container-default">
      <div class="self-start content-wrapper content-wrapper--wide sm:row-start-1">
      
        {{ sprig('_sprig/blog/index', {
          category: category ? category.id : null,
          query: null,
          limit: 10
        }) }}
      </div>
      
    </div>
  </section>

{% endblock %}
